        <%- '<link rel="stylesheet" type="text/css" href="css/general_dark.css">' %>
    <% } %>
    <link rel="stylesheet" type="text/css" href="css/preferences.css">
</head>
<body>
<%- include("partials/navbar.ejs", {activeNav: "profile", userId: userId, darkMode: darkMode}) %>
